<% if @comment.errors.any? %>
  <ul>
    <% @comment.errors.each do |error| %>
      <li><%= error.full_message %></li>
    <% end %>
  </ul>
<% end %>
<h1>Title: <%= @post.title %></h1>
<%= render partial: 'form',
           locals: {
             post: @post,
             comment: @comment,
             path: post_comments_path(@post)
           }
%>